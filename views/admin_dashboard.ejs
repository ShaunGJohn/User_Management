<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body class="admin-dashboard-page">
    <div class="admin-wrapper">

        <!-- Header: Title + Logout -->
        <div class="admin-header">
            <h2>Admin Dashboard</h2>
            <a href="/admin/logout" class="btn logout-btn">Logout</a>
            

        </div>
        
        <a href="/admin/add" class="btn add-user-btn">+ Add User</a>
        <br>


        <!-- Search Row -->
        <div class="search-bar">
            <form action="/admin/dashboard/search" method="GET" class="search-form">
                <input type="text" name="q" placeholder="Search by name or email" class="search-input" required>
                <button type="submit" class="btn search-btn">Search</button>
                <a href="/admin/dashboard" class="btn reset-btn">Reset</a>
            </form>
        </div>

        <!-- User Cards -->
        <div class="user-card-container">
            <% users.forEach(user => { %>
                <div class="user-card">
                    <h3><%= user.name %></h3>
                    <p><strong>ID:</strong> <%= user.id %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Phone:</strong> <%= user.phone %></p>
                    <div class="card-buttons">
                        <a href="/admin/edit/<%= user.id %>" class="btn edit-btn">Edit</a>
                        <a href="/admin/delete/<%= user.id %>" onclick="return confirm('Are you sure you want to delete this user?')" class="btn delete-btn">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
