<h2>Admin Dashboard</h2>
<p><a href="/admin/logout">Logout</a></p>

<form action="/admin/dashboard/search" method="GET">
    <input type="text" name="q" placeholder="Search by name or email" required>
    <button type="submit">Search</button>
    <a href="/admin/dashboard">Reset</a>
</form>

<table border="1" cellpadding="8">
    <thead>
        <tr>
            <th>ID</th><th>Name</th><th>Email</th><th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <a href="/admin/edit/<%= user.id %>">Edit</a> |
                    <a href="/admin/delete/<%= user.id %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
